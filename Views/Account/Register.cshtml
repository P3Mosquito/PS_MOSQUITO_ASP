@model ps_mosquito_asp.Models.UserModel

@{
    ViewData["Title"] = "Registrar Usuario";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row justify-content-center align-items-center">
    <div class="col-md-4 mx-auto my-5">
        <h3 class="text-center">Usuarios</h3>
        <div class="card" style="background-color:#DCE1DE;">
            <div class="card-body">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <input asp-for="name" class="form-control" placeholder="Nombre" pattern="[a-zA-ZñÑ]+" title="El nombre solo puede contener letras." maxlength="30" required />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="lastname" class="form-control" placeholder="Apellidos" pattern="[a-zA-ZñÑ]+" title="El apellido solo puede contener letras." maxlength="40" required />
                        <span asp-validation-for="lastname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="ci" class="form-control" placeholder="CI" pattern="\d{8}[A-Za-z]{0,2}" title="Ingrese 8 dígitos y hasta 2 letras opcionales." maxlength="10" required />
                        <span asp-validation-for="ci" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="role" class="form-select">
                            <option value="">Seleccione un Rol</option>
                            <option value="Supervisor" selected>Supervisor</option>
                            <option value="Administrador">Administrador</option>
                        </select>
                        <span asp-validation-for="role" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="position" class="form-control" placeholder="Cargo" required/>
                        <span asp-validation-for="position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="email" class="form-control" placeholder="E-mail" required/>
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <input asp-for="password" class="form-control" type="password" placeholder="Contraseña" required/>
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">
                        <input type="submit" value="Crear Usuario" class="btn btn-success w-100 mt-3" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




