@model IEnumerable<ps_mosquito_asp.Models.ColorModel>

@{
    ViewData["Title"] = "Colores";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<p>
    <a asp-action="Create" class="mt-3 btn btn-success">Create Nuevo Tipo Color</a>
</p>
<div class="table-responsive">

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Color
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Descripcion
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <!-- Mostrar el color -->
                        <div style="background-color: @item.color; width: 30px; height: 30px; border: 1px solid #ddd;"></div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        <a href="@Url.Action("EditColor", new { id = item.id })" class="btn btn-sm btn-secondary">Editar</a>
						
                        <a href="@Url.Action("DeleteColor", new { id = item.id})" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
